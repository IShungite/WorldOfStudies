{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "skipLibCheck": true,
    "composite": true,
    "declarationMap": true,
  },
  "include": [
    "src/**/*.ts",
    "../../apps/mobile/src/utils/types.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],
}
